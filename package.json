{
  "name": "rpos",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "NATIVEWIND_TEST=true jest",
    "start:clean": "expo start -c",
    "web:clean": "expo start --web -c",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "doctor": "expo-doctor",
    "fix:all": "npm run lint:fix && npm run format:fix && npm run typecheck"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@hookform/resolvers": "^3.3.2",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-community/netinfo": "9.3.7",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/native": "^6.1.9",
    "@reduxjs/toolkit": "^2.1.1",
    "dayjs": "^1.11.10",
    "expo": "~50.0.0",
    "expo-barcode-scanner": "^12.8.2",
    "expo-print": "^12.8.0",
    "expo-router": "^3.4.6",
    "firebase": "^10.8.0",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-hook-form": "^7.49.2",
    "react-native": "0.73.6",
    "react-native-paper": "^5.11.1",
    "react-native-svg": "^14.1.0",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/jest-native": "5.4.2",
    "@testing-library/react-native": "12.5.0",
    "@types/jest": "29.5.5",
    "@types/node": "^24.3.0",
    "@types/react": "18.2.39",
    "@types/react-native": "0.73.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "29.7.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "29.7.0",
    "prettier": "^3.2.5",
    "react-test-renderer": "18.2.0",
    "tailwindcss": "^3.3.3",
    "ts-jest": "29.1.1",
    "typescript": "5.3.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|@react-navigation|expo-router)/)"
    ]
  }
}
